<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>City</th>
      <th>Posts</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= avatar(user) %></td>
        <td><%= user.name %></td>
        <td><%= user.city %></td>
        <td><%= user.posts.count %></td>
        <td><%= link_to 'Show', user %></td>
        <td>
          <%= render partial: 'friendships/form', locals: { user: user, redirect_me: users_path }  %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @users %>
