<div class="container">
<div class="row">
    <div class="col-xs-3 col-xs-offset-2">
      <h3>Name</h3>
    </div>
    <div class="col-xs-3">
      <h3>City</h3>
    </div>
    <div class="col-xs-2">
      <h3>Posts</h3>
    </div>
  </div>
  <% @users.each do |user| %>
  <div class="row">
    <div class="col-xs-2">
      <%= avatar(user) %>
    </div>
    <div class="col-xs-3">
      <%= user.name %>
    </div>
    <div class="col-xs-3">
      <%= user.city %>
    </div>
    <div class="col-xs-2">
      <%= user.posts.count %>
    </div>
    <div class="col-xs-2">
      <%= render partial: 'friendships/form', locals: { user: user, redirect_me: users_path }  %>
    </div>
  </div>
  <% end %>
</div>

<div class="text-center">
    <%= will_paginate %>
</div>
